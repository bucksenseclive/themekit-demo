
<style>
  .subscription-form {
      background-color: #000;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 16px 32px 64px 32px;
      width: 90%;
      margin: 0 auto;
      border-radius: 10px;
      background-image: url("{{ 'join-the-list-bg.png' | asset_img_url:'master' }}");
      background-size: contain;
      background-repeat: no-repeat;
      background-position: bottom;
      min-height: 360px;
  }
  
  .subscription_title {
    color: #fff;
    font-weight: bold;
    font-size: 24px;
  }

  .subscription_title img {
    width: auto;
    height: 50px;
  }
  
  p.subscription_description {
    color: #ffffff;
    text-align: center;
    font-family: 'neusa-next-std', sans-serif;
    line-height: 1.3;
    font-weight: 400;
    font-size: 14px;
    margin-bottom: 24px;
    margin-top: 0;
  }

  .red-color {
    font-weight: 600;
    color: #ED3534;
  }
  
  .subscription-form input {
      min-height:  40px;
      text-align: center;
      width: 100%;
      border-radius: 4px;
      border: none;
      font-family: 'neusa-next-std', sans-serif;
  }
  
  button.subscription__button {
      width: 100%;
      font-weight: 500;
      font-size: 14px;
      height: 40px;
      border-radius: 32px;
      color: #fff;
      background: #ED3534;
      border: none;
      margin-top: 16px;
      font-family: 'neusa-next-std', sans-serif;
      cursor: pointer;
  }
</style>


<div class="subscription-form">
  <div class="subscription_title">
    {% if section.settings.title != blank %}
      {{ section.settings.title }}
    {% elsif section.settings.svg_title != blank %}
      {{ section.settings.svg_title }}
    {% elsif section.settings.img_title != blank %}
      <img src="{{ section.settings.img_title | img_url:"master" }}" width="100" height="100"/>
    {% endif %}
  </div>

  <p class="subscription_description">Get <span class="red-color">10% OFF</span> on your next order, and access to exclusive deals down the road</p>

  <input type="text" placeholder="Your Email" />

  <button class="subscription__button">Subscribe</button>
</div>


{% schema %}
  {
    "name": "Subscription Form",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "html",
        "id": "svg_title",
        "label": "Title (SVG)"
      },
      {
        "type": "image_picker",
        "id": "img_title",
        "label": "Title (Image)"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "checkbox",
        "id": "enable_button",
        "label": "Enable Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }
    ],
    "presets": [
      {
        "name": "Subscription Form"
      }
    ]
  }
{% endschema %}