
{% for meta_block in metaobject.blocks.value %}
  {% assign bg_color = "#FFFFFF" %}
  {% if meta_block.background_color %}
    {% assign bg_color = meta_block.background_color %}
  {% endif %}
  <div class="brand-details" style="background-color: {{ bg_color }}">
    {% unless section.settings.video_banner == blank  %}
      <iframe width="560" height="315" src="https://www.youtube.com/embed/rgZU5pDf6mw?si=89QTaT7tEXx3da-X" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    {% elsif meta_block.image != blank  %}
      <img class="brand-details__img {{ meta_block.custom_class.value }}" src="{{ meta_block.image.value | img_url: 'master' }}" height="100" width="100" />
    {% endunless %}
    
    {% if section.settings.title != blank %}
      <div class="brand-details__title">
        {{ section.settings.title }}
      </div>
    {% elsif meta_block.svg_logo != blank %}
      <div class="brand-details__title">
      {{ meta_block.svg_logo.value }}
      </div>
    {% elsif section.settings.img_title != blank %}
      <div class="brand-details__title">
        <img src="{{ section.settings.img_title | img_url:"master" }}" width="100" height="100"/>
      </div>
    {% endif %}
  
    <div class="brand-details__description">
      {{ meta_block.description | metafield_tag }}
    </div>
  
    {% if meta_block.button_text %}
      <div class="brand-details__button">
        <button>{{ meta_block.button_text }}</button>
      </div>
    {%  endif %}
  
  </div>
{% endfor %}

<script>
  const currentUrl = window.location.href;
  console.log(">>>>>>>>>>>>>>>>>>", currentUrl);
</script>


{% schema %}
  {
    "name": "Brand Details Group",
    "settings": [
      {
        "type": "image_picker",
        "id": "brand_details_img_desktop",
        "label": "Banner Image Desktop"
      },
      {
        "type": "url",
        "id": "video_banner",
        "label": "Video Banner"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "Title (Text)"
      },
      {
        "type": "image_picker",
        "id": "img_title",
        "label": "Title (Image)"
      }
    ],
    "presets": [
      {
        "name": "Brand Details Group"
      }
    ]
  }
{% endschema %}